@model LoginVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="@Url.Content("~/assets/images/breadcrumb/bg/1-1-1919x388.jpg")">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login Page</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="col-lg-12">
                                    <label asp-for="EmailAddress">Email Address</label>
                                    <input asp-for="EmailAddress" placeholder="Email Address" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input asp-for="isRemember" />
                                        <label asp-for="isRemember">Remember me</label>
                                    </div>
                                </div>

                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a asp-controller="Account" asp-action="ForgotPassword">
                                            Forgotten password?
                                        </a>
                                    </div>
                                </div>

                                <div class="col-lg-12 pt-5">
                                    <button type="submit"
                                            class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
