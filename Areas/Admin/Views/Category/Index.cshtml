@model List<Category>

<div>
    <div style="margin-bottom: 15px;">
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">Create New Category</a>
    </div>
<table class="table table-bordered" style="table-layout: fixed; width: 100%;">
    <thead>
        <tr>
            <th style="width: 5%;">Id</th>
            <th style="width: 40%;">Name</th>
            <th style="width: 15%;">Created Date</th>
            <th style="width: 10%;">Active</th>
            <th style="width: 30%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @(category.IsDeleted ? "Inactive" : "Active")
                </td>
                <td>
                    <a class="btn btn-warning btn-sm"
                       asp-area="Admin"
                       asp-controller="Category"
                       asp-action="Update"
                       asp-route-id="@category.Id">
                        Update
                    </a>

                    <form asp-area="Admin"
                          asp-controller="Category"
                          asp-action="Delete"
                          asp-route-id="@category.Id"
                          method="post"
                          style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>

                    <form asp-area="Admin"
                          asp-controller="Category"
                          asp-action="Toggle"
                          asp-route-id="@category.Id"
                          method="post"
                          style="display:inline; margin-left: 5px;">
                        <button type="submit" class="btn btn-sm @(category.IsDeleted ? "btn-secondary" : "btn-info")">
                            @(category.IsDeleted ? "Inactive" : "Active")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>