@model Category

<form method="post" asp-area="Admin" asp-controller="Category" asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <br />
    <h2>Update Shipping</h2>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDeleted">Is Deleted</label>
        <input asp-for="IsDeleted" type="checkbox" />
    </div>

    <div style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
</div>