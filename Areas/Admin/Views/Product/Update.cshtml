@model Product

<form method="post" asp-area="Admin" asp-controller="Product" asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <br />
    <h2>Update Product</h2>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MainImagePath">Main Image URL</label>
        <input asp-for="MainImagePath" class="form-control" />
        <span asp-validation-for="MainImagePath" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.MainImagePath))
        {
            <div style="margin-top: 10px;">
                <img src="@Model.MainImagePath" alt="Current Main Image" style="max-width: 150px; height: auto;" />
            </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="HoverImagePath">Hover Image URL</label>
        <input asp-for="HoverImagePath" class="form-control" />
        <span asp-validation-for="HoverImagePath" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.HoverImagePath))
        {
            <div style="margin-top: 10px;">
                <img src="@Model.HoverImagePath" alt="Current Hover Image" style="max-width: 150px; height: auto;" />
            </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SKU">SKU</label>
        <input asp-for="SKU" class="form-control" />
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category Id</label>
        <input asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></input>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDeleted">Is Deleted</label>
        <input asp-for="IsDeleted" type="checkbox" />
    </div>

    <div style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
