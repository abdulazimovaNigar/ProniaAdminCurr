@model List<Card>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Cards List</h2>
    <a asp-action="Create" class="btn btn-success">Create New Card</a>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Card card in Model)
        {
            <tr>
                <th>@card.Id</th>
                <td>@card.Image</td>
                <td>@card.Title</td>
                <td>@card.Description</td>
                <td>
                    <form asp-area="admin" asp-controller="card" asp-action="Delete" asp-route-id="@card.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a asp-area="admin"
                       asp-controller="card"
                       asp-action="Update"
                       asp-route-id="@card.Id" class="btn btn-warning">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
